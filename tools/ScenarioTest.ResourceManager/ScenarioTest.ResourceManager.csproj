<Project Sdk="Microsoft.NET.Sdk">
  
  <Import Project="$(MSBuildThisFileDirectory)..\..\Repo.props" />
  <Import Project="$(RepoTools)Common.Netcore.Dependencies.Test.targets" />

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.1;netcoreapp2.0;netstandard2.0</TargetFrameworks>
    <AssemblyName>Microsoft.Azure.PowerShell.ScenarioTest.ResourceManager</AssemblyName>
    <RootNamespace>Microsoft.Azure.Commands.ScenarioTest</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <IsPackable>false</IsPackable>
    <CopyLocalLockFileAssemblies Condition="'$(TargetFramework)' == 'netstandard2.0'">true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;RELEASE;NETSTANDARD</DefineConstants>
  </PropertyGroup>

  <ItemGroup>    
    <PackageReference Include="Moq" Version="4.7.145" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoSrc)Accounts\Authentication\Authentication.csproj" />
    <ProjectReference Include="$(RepoSrc)Accounts\Authentication.ResourceManager\Authentication.ResourceManager.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assert.ps1" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="Common.ps1" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="AzureRM.Resources.ps1" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="AzureRM.Storage.ps1" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>